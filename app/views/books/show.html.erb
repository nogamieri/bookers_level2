<div class="container-fluid">
	<div class="row sampleRow">
		<div class="col-xs-4">

			<div class="user_info">
				<p>User info</p>

				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
					<table class="table">
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
					</table>
				<%if @user.id == current_user.id %>
				<p><%= link_to("編集",edit_user_path(@user)) %></p>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
				<% end %>

			</div>

				<div class="newpost">
					<p>new book</p>
					<%= form_for(@book_new) do |f| %>
					<h4>Title</h4>
					<%= f.text_field :title %>

					<h4>Opinion</h4>
					<%= f.text_area :body %>
					<br>
					<%= f.submit 'Create Book' %>
					<% end %>
				</div>

					<style>
					.sampleRow > div {
						border: 1px solid gray;
					}
					</style>
		</div>
		<div class="col-xs-8">
			<div class="bookdetail">
				<p>Bookdetail</p>
				<table>
					<tr>
						<th>アイコン</th>
						<th><%= @book.title %></th>
						<th><%= @book.body %></th>
						<th>
						<%= link_to "edit", edit_book_path(@book) %>
						</th>
						<th>
						<%= link_to "destroy", books_path(@book), method: :delete %>
						</th>
					</tr>
				</table>
			</div>
		</div>
	</div>
</div>

