<h1>Users#show</h1>

<div class="user_info">
	<p>User info</p>

	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
	<table>
		<tr>
			<th>name</th>
			<th><%= @user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= @user.introduction %></th>
		</tr>
	</table>
	
</div>

<div class="newpost">
	<p>new book</p>
	
	<%= form_for(@book, url: 'books') do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>Opinion</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>
	<% end %>
</div> 

<div class="users">
	<p>Users</p>
</div>