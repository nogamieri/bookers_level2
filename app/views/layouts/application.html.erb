<!DOCTYPE html>
<html>
  <head>
    <title>BookersLevel2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  <div class="container-fluid">
    <div class="col-xs-12 header__float">
      <h1>Bookers</h1>
      
      <nav>
        <ul>
          <% if user_signed_in? %>
            <li><span class="glyphicon glyphicon-home" aria-hidden="true"></span>
              <%= link_to "Home",user_path(current_user.id) %></li>
            <li><span class="glyphicon glyphicon-user" aria-hidden="true"></span>user</li>
            <li><span class="glyphicon glyphicon-book" aria-hidden="true"></span>
            <%= link_to "Books",books_path %></li>

            <li><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
              <%= link_to "logout", destroy_user_session_path, method: :delete %></li>

            <% else %>

            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "About", home_about_path %></li>
            <li><%= link_to "sign up", new_user_registration_path %></li>
            <li><%= link_to "login", new_user_session_path %>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>


    <%= yield %>
  </body>
</html>


